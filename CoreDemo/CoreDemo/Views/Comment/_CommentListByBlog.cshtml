@using CoreDemo.Shared.Models
@model IEnumerable<Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
      @if (Model.Any())
    {
          foreach (var item in Model)
    {
        
              <div class="media"> 
                       <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                   <div class="media-body">
                   <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>@item.CommentContent</p>

                  </div>
            </div>
        }
    }
    else
    {
        <div class="media"> 
                   <div class="media-body">
                   <h5 class="mt-0 text-danger">ilk yorumu siz yapin</h5>
                    

                  </div>
            </div>
    }

        
      
         

   
</div>